<form action="/cats/editCat/{{cat._id}}" method="POST" class="cat-form">
    <h2>Edit Cat</h2>
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{cat.name}}">
    <label for="description">Description</label>
    <textarea name="description" id="description">{{cat.description}}</textarea>
    <label for="imageUrl">Image</label>
    <input name="imageUrl" type="text" id="imageUrl" value="{{cat.imageUrl}}">
    <label for="age">Age</label>
    <input name="age" type="number" id="age" value="{{cat.age}}">
    <label for="group">Breed</label>
    <input name="bread" type="text" id="bread" value="{{cat.bread}}">
    <button>Edit Cat</button>
</form>